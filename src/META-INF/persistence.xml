<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="deportes" transaction-type="RESOURCE_LOCAL">

	<class>deportes.Deporte</class>
	<class>deportes.Entrenador</class>
	<class>deportes.Entrenamiento</class>
	<class>deportes.Evento</class>
	<class>deportes.Noticia</class>
	<properties><property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/deportes"/>
		<property name="eclipselink.jdbc.user" value="root"/>
		<property name="eclipselink.jdbc.password" value="root"/>		
		</properties>
	</persistence-unit>
</persistence>
